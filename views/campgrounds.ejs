<%- include('header.ejs') %>

<div class="container">
	<header class="jumbotron">
	<div class="container">
		<h1>Camp Grounds </h1>
		<p>Best CampGrounds In India</p>
		<a class="btn btn-primary btn-lg" href="campgrounds/new"> Add New CampGrounds </a>
	</div>
	</header>

	<div class="row text-center" style="display:flex; flex-wrap: wrap;">
		<% campgrounds.forEach(function(cg){ %>
			<div class="col-md-4">
				<div class="thumbnail">
					<img  width="300px" height ="200px" src="<%= cg.url %>" /> 
					<div class="caption">
					   <h5> <%= cg.name %> </h5>
					 </div>
				</div>
			 </div>
			
		<% }) %>
	</div>
</div>
<%- include('footer.ejs') %>