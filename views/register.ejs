<%- include('header.ejs') %>	
		

		
<div class="ui main text container segment" id="blogform">
	<div class="ui huge header"> Register </div>
	<hr>
	<form action="/xapjam/users/register" method="POST" class="ui form">
		<div class="field">
			<label>Name:</label>
			<input type="text" name="username" placeholder="Enter your name" required/>
		</div>
		<div class="field">
			<div>
				<label>Email:</label>
			<input type="email" name="email" placeholder="Enter Email" required/>
			</div>
		</div>
		<div class="field">
			<div>
				<label>Password:</label>
			<input type="password" name="password" placeholder="Create password" required/>
			</div>
		</div>
		<div class="field">
			<div>
				<label>Confirm Password:</label>
			<input type="password" name="confirmPassword" placeholder="Re Enter password" required/>
			</div>
		</div>
		<div>
			<input class="ui blue big button" type="submit" />
		</div>
		<br>
		<div>
			 <a class="ui green button" href="/xapjam/users/login" >Login</a>
		</div>
	</form>
</div>
<%- include('footer.ejs') %>

