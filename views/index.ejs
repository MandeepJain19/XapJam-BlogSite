
<%- include('header.ejs') %>

<div class="journal">
	<span>The Journal</span>
</div>

<div id="nav0">
	<hr id="navhr">
	<div class="ui center aligned page stackable five column grid" id="nav1">
			  <div class="column"><a href="/xapjam/events"><div class="column">Event</div></a></div>
			  <div class="column"><a href="/xapjam/food"><div class="column">Food</div></a></div>
			  <div class="column"><a href="/xapjam/entertainment"><div class="column">Entertainment</div></a></div>
			  <div class="column"><a href="/xapjam/campus"><div class="column">Campus</div></a></div>
			  <div class="column"><a href="/xapjam/about"><div class="column">About</div></a></div>
		</div>
	<hr id="navhr">
	</div>
	<br>
	
		<br>
		<% if(!blogs){ %>
			<%console.log(404);%>
		<%}else{%>
			<% var inc = 0;%>
		<%}%>
		
		<% blogs.forEach(function(blog){ %>
		
		<% if(inc == 0){ %>
		<% inc++ %>
		<div class="container"> 
		<div class="row" >
			<div class="col-md" id="imgBox">
				<a href="/xapjam/<%= blog._id %>">
				<img class="ui segment medium rounded image" id="blogImg" src="<%= blog.img %>" />
				</a>
			</div>
			<div class="col-md" id="blogTitle" >
				<h2 class="titleFont"> <%= blog.title %></h2>
				<div class="ui stackable two column grid" id="blogDesc">
					<div class="column" id="textStyle">
					
					<% var array=blog.desc.split(" "); %>
					<p id="bigDesc">
					<% for(var i=0; i<60; i++){ %>
					<%- array[i] %>
						<% } %>
				
					</div>
					<div class="column" id="textStyle">
					<% for(var i=60; i<110; i++){ %>
					<%- array[i] %>
						<% } %>
						.....</p>
					</div>
				</div>
				<br>
				<!-- Animated Button -->
				<a href="/xapjam/<%= blog._id %>">
				<div class="ui animated button"  id="readButton" tabindex="0">
					<div class="visible content">Read More...</div>
					<div class="hidden content">
					  <i class="right arrow icon"></i>
					</div>
				  </div>
				</a>
				<!-- <a href="/xapjam/<%= blog._id %>" class="ui blue button" id="readButton">Read More</a> -->
			</div>
		</div>
		<br>
		<br>
		<hr id="hrAfterBlog">
		<div class="ui stackable three column  grid" >
		<%}else{%>
			<% inc++ %>
		<div class="column">
			<div id="imgBox2">
				<a href="/xapjam/<%= blog._id %>">
					<img id="blogImg2" src="<%= blog.img %>" class="ui medium rounded image segment"> 
				</a>
			</div>
			<br>
			<div >
				<h4 class="titleFont"><%= blog.title %></h4>
			</div>
			<br>
			<div id="blog2" class="container">
				<p id="bigDesc"><%- blog.desc.substring(0,150) %>.....</p>
				<!-- <a href="/xapjam/<%= blog._id %>" class="ui red button" id="readButton">Read More</a> -->
				<!-- Animated Button -->
				<a href="/xapjam/<%= blog._id %>">
					<div class="ui animated button"  id="readButton" tabindex="0">
						<div class="visible content">Read More...</div>
						<div class="hidden content">
						  <i class="right arrow icon"></i>
						</div>
					  </div>
					</a>
			</div>
		</div>
		
		<% } %>
		
		<% }); %>
	   </div>
	   
		<br>
		
		<%- include("footer.ejs") %>
		
	
			
			
			




